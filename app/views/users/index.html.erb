<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info', user:@user %>
      <div class="row">
        <%= link_to '', edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, local:true do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, :class  => 'form-control' %>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, :class  => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', :class  => 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
          <tr>
            <td>
              <%= attachment_image_tag users, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
            </td>
            <td>
              <%= users.name %>
            </td>
            <td><%= link_to "Show", user_path(users) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>